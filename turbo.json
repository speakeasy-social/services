{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "prisma/**/*.prisma"]
    },
    "dev:prisma": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "inputs": ["prisma/**/*.prisma"]
    },
    "dev:api": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "inputs": ["src/**/*.ts", "src/**/*.tsx"]
    },
    "dev:worker": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "inputs": ["src/**/*.ts", "src/**/*.tsx"]
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "setup:db": {
      "cache": false,
      "inputs": ["src/**/*.ts"]
    }
  }
}
