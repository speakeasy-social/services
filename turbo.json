{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "prisma:generate"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "dev": {
      "dependsOn": ["build", "dev:api", "dev:worker"],
      "cache": false,
      "persistent": true,
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "prisma/**/*.prisma"]
    },
    "prisma:generate": {
      "dependsOn": ["^build"],
      "outputs": ["src/generated/**"],
      "inputs": ["prisma/**/*.prisma"]
    },
    "dev:prisma": {
      "dependsOn": ["prisma:generate"],
      "cache": false,
      "persistent": true,
      "inputs": ["prisma/**/*.prisma"]
    },
    "dev:api": {
      "dependsOn": ["^build", "prisma:generate"],
      "cache": false,
      "persistent": true,
      "inputs": ["src/**/*.ts", "src/**/*.tsx"]
    },
    "dev:worker": {
      "dependsOn": ["^build", "prisma:generate"],
      "cache": false,
      "persistent": true,
      "inputs": ["src/**/*.ts", "src/**/*.tsx"]
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^build", "prisma:generate"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"],
      "cache": false
    },
    "setup:db": {
      "cache": false,
      "inputs": ["src/**/*.ts"]
    }
  }
}
