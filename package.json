{
  "name": "speakeasy-services",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:setup:env": "test -f .env || (test -f .env.example && cp .env.example .env) && for service in services/*; do test -f \"$service/.env\" || (test -f \"$service/.env.example\" && cp \"$service/.env.example\" \"$service/.env\") 2>/dev/null || true; done",
    "dev:setup:infra": "docker-compose up -d",
    "dev:setup:db": "./scripts/create-schemas.sh && pnpm --filter @speakeasy-services/queue setup:db",
    "dev:setup": "pnpm dev:setup:env && pnpm dev:setup:infra && pnpm dev:setup:db",
    "dev:api": "turbo run dev:api",
    "dev:worker": "turbo run dev:worker",
    "dev:prisma": "turbo run dev:prisma",
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:worker\" \"pnpm dev:prisma\"",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev:private-sessions": "turbo run dev --filter=@speakeasy-services/private-sessions",
    "dev:trusted-users": "turbo run dev --filter=@speakeasy-services/trusted-users",
    "dev:user-keys": "turbo run dev --filter=@speakeasy-services/user-keys",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio"
  },
  "devDependencies": {
    "@types/node": "^22.13.11",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "prisma": "^6.5.0",
    "turbo": "^2.4.4",
    "typescript": "^5.3.3",
    "concurrently": "^8.2.2"
  },
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "packages/*",
    "services/*"
  ]
}
