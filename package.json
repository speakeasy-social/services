{
  "name": "speakeasy-services",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:setup:env": "test -f .env || (test -f .env.example && cp .env.example .env) && for service in services/*; do test -f \"$service/.env\" || (test -f \"$service/.env.example\" && cp \"$service/.env.example\" \"$service/.env\") 2>/dev/null || true; done",
    "dev:setup:infra": "docker compose up -d",
    "dev:setup:db": "./scripts/create-schemas.sh",
    "dev:setup:migrations": "./scripts/run-migrations.sh",
    "dev:setup:s3": "./scripts/init-s3.sh",
    "dev:setup": "./scripts/dev-setup.sh",
    "test:setup": "NODE_ENV=test ./scripts/dev-setup.sh",
    "test:setup:db": "NODE_ENV=test ./scripts/create-schemas.sh",
    "test:setup:migrations": "NODE_ENV=test ./scripts/run-migrations.sh",
    "dev:prisma": "turbo run dev:prisma",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev:api dev:worker --filter=./services/*",
    "dev:private-sessions": "turbo run dev:prisma dev:api dev:worker --filter=@speakeasy-services/private-sessions",
    "dev:trusted-users": "turbo run dev:prisma dev:api dev:worker --filter=@speakeasy-services/trusted-users",
    "dev:user-keys": "turbo run dev:prisma dev:api dev:worker --filter=@speakeasy-services/user-keys",
    "contribution:add": "node services/service-admin/dist/cli/addContribution.js",
    "invite:add": "node services/service-admin/dist/cli/addInvite.js",
    "lint": "turbo run lint",
    "test": "turbo run test --continue --concurrency=1",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "typecheck": "turbo run typecheck"
  },
  "dependencies": {
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.11",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "nock": "^13.5.1",
    "prettier": "^3.2.5",
    "prisma": "^6.5.0",
    "supertest": "^6.3.4",
    "turbo": "^2.4.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=22.14.0"
  },
  "workspaces": [
    "packages/*",
    "services/*"
  ]
}