generator client {
  provider = "prisma-client-js"
  output = "../src/generated/prisma-client"
  // previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("SERVICE_ADMIN_DATABASE_URL")
  // extensions = [uuidOssp(map: "uuid-ossp")]
}

model InviteCode {
  id            String   @id @default(uuid()) @db.Uuid
  code          String   @unique
  creatorDid    String?  // null for admin-created codes
  totalUses     Int      @default(1)
  remainingUses Int      @default(1)
  key           String
  value         String   @default("true")
  createdAt     DateTime @default(now())
  updatedAt     DateTime?

  // Relationships
  uses     InviteCodeUse[]

  @@index([creatorDid, createdAt], name: "idx_creator_did_created_at")
  @@map("invite_codes")
}

model InviteCodeUse {
  id             String   @id @default(uuid()) @db.Uuid
  inviteCodeId   String   @db.Uuid
  userFeatureId  String   @db.Uuid
  createdAt      DateTime @default(now())

  // Relationships
  inviteCode InviteCode    @relation(fields: [inviteCodeId], references: [id])
  feature    UserFeature   @relation(fields: [userFeatureId], references: [id])

  @@unique([inviteCodeId, userFeatureId])
  @@map("invite_code_uses")
}

model UserFeature {
  id        String   @id @default(uuid()) @db.Uuid
  userDid   String
  key       String
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime?

  // Relationships
  inviteCodeUse InviteCodeUse[]

  @@index([userDid, key], name: "idx_user_did_key_index")
  @@map("user_features")
}

model Contribution {
  id           String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  did          String
  contribution String
  /// Public metadata visible in API responses (recognition?, isRegularGift?, feature? - all optional, feature applicable to all types)
  public       Json?    @map("public_data")
  /// Internal metadata - MUST NEVER be returned in API responses (amount, donationId)
  internal     Json?    @map("internal_data")
  createdAt    DateTime  @default(now())
  deletedAt    DateTime?

  @@index([did, createdAt], name: "idx_contribution_did_created")
  @@map("contributions")
}

model Testimonial {
  id        String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  did       String
  content   Json
  createdAt DateTime  @default(now())
  deletedAt DateTime?

  @@index([did], name: "idx_testimonial_did")
  @@map("testimonials")
}

