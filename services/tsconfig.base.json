{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "outDir": "dist",
    "typeRoots": [
      "../node_modules/@types",
      "./node_modules/@types",
      "./src/types",
    ],
    "paths": {
      "@prisma/client": ["./src/generated/prisma-client"]
    }
  },
  "include": [
    "src/**/*",
    "src/generated/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
