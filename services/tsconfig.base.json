{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": [
      "../node_modules/@types",
      "./node_modules/@types",
      "./src/types",
      "./node_modules/.prisma/client"
    ],
    "paths": {
      "@prisma/client": ["./node_modules/.prisma/client"]
    }
  },
  "include": [
    "src/**/*",
    "node_modules/.prisma/client/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
